    "target": "es2015",
    "module": "commonjs",
    "outDir": "dist/node/lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2015", "es2017"],
    "downlevelIteration":true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}